<div class="container adminlogin mt-3">
    <div class="row mt-3">
        <div class="col-md-12">
            <h3 class="text-center mt-3">Teacher Login</h3>
            <form action="/teachersign" method="post">
            <label for="emailid"></label>
           <input class="inputoutline" type="text" name="emailid" id="emailid"   placeholder="Enter Your Email" style="width: 100%;" required>
           <label for="passowrd"></label>
           <input class="inputoutline" type="password" name="password" id="password"  placeholder="Enter your password" style="width: 100%;" required>
            <p>{{founderror}}</p>
            <p>{{passerror}}</p>
           <button class="buttonlogin"  type="submit" style="width: 100%;">Login</button>
           </form>
           <div class="row">
           <a  class="text-center  text-decoration-none mt-3" href="/teacherforget">Forget Password</a>
           <a class="text-center  text-decoration-none mt-3" href="/teachersignup">Create Account</a>

           </div>
        </div>
    </div>
</div>