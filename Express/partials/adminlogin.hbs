<div class="container">
    <div class="row mt-3">
        <div class="col-md-12 adminlogin">
            <h3 class="text-center mt-3">Admin Login</h3>
            <form action="/adminlogin" method="post">
            <label for="emailid"></label>
           <input class="inputoutline" type="text" name="emailid" id="emailid" placeholder="Enter Your Email" style="width: 100%;" required>
           <label for="passowrd"></label>
           <input  class="inputoutline" type="password" name="password" id="password" placeholder="Enter Your Password" style="width: 100%;" required>
           <p >{{signup}}</p>
           <p >{{passerror}}</p>
           <button class="buttonlogin"  type="submit" style="width: 100%;">Login</button>
           </form>
           <div class="row ">
           <a class="text-center text-decoration-none mt-2" href="/adminforget">Forget Password</a>
           <a class="text-center text-decoration-none mt-2" href="/adminsignup">Create Account</a>
           </div>
        </div>
    </div>
</div>